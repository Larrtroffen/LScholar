{
  "name": "lscholar",
  "version": "1.0.0",
  "description": "LScholar: A beautiful, efficient, and intelligent desktop tool for academic literature tracking.",
  "main": "dist/main/index.js",
  "author": "LarRs",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win --x64",
    "build:mac": "vite build && electron-builder --mac --universal",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.4.2",
    "@lancedb/lancedb-win32-x64-msvc": "^0.22.3",
    "apache-arrow": "^21.1.0",
    "axios": "^1.6.2",
    "better-sqlite3": "^11.3.0",
    "cheerio": "^1.1.2",
    "element-plus": "^2.4.2",
    "lucide-vue-next": "^0.292.0",
    "node-cron": "^3.0.3",
    "pinia": "^2.1.7",
    "tiktoken": "^1.0.11",
    "tslib": "^2.8.1",
    "vm2": "^3.9.19",
    "vue": "^3.3.8"
  },
  "build": {
    "appId": "com.lscholar.app",
    "productName": "LScholar",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "**/node_modules/@lancedb/**/*",
      "**/node_modules/apache-arrow/**/*",
      "**/node_modules/tslib/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signingHashAlgorithms": null
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LScholar"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "autoprefixer": "^10.4.16",
    "electron": "27.3.11",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.31",
    "prebuild-install": "^7.1.3",
    "tailwindcss": "^3.3.5",
    "tree-kill": "^1.2.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.3.0",
    "vue-tsc": "^1.8.22"
  }
}
